<h1>Add a new Concert</h1>

<%= @concerts.errors.full_messages %>

<%= form_for @concert do |f| %>
	<div>
		<%= f.label :artist %>
		<%= f.text_field :artist %>
	</div>

	<div>
		<%= f.label :venue %>
		<%= f.text_field :venue %>
	</div>

	<div>
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>

	<div>
		<%= f.label :date %>
		<%= f.datetime_field :date %>
	</div>

	<div>
		<%= f.label :price %>
		<%= f.text_field :price %>
	</div>

	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

	<button type="Submit">
		Add this concert
	</button>

<% end %>
