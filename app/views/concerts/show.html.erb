
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-7">
			<div class="row">
				<div class="col-sm-12">
					<h3><%= @concert.artist %></h3>
					<h5><%= @concert.date %></h5>
					<p><%= @concert.description %></p>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<%= render 'comments/index' %>
					<br>
					<% if current_user.nil? %>
						<br>
					<% else %>
						<%= render 'comments/new' %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-sm-2">
		</div>
		<div class="col-sm-3">
			<h4>Concert Details:</h4>
			<hr>
			<p>Price: $<%= @concert.price %></p>
			<p>City: <%= @concert.city %></p>
			<p><%= @concert.venue %></p>
		</div>
	</div>
</div>
